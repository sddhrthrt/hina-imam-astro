---
import Navigation from '../components/Navigation.astro'
import { getCollection } from "astro:content";
import { DarkMode, Link, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */


const posts = (await getCollection("posts"))
  .filter((post) => !post.data.draft)

const hasPosts = posts.length > 0
---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item">
      <Link href="/">Home</Link>
    </li>
    { hasPosts &&
      <li class="menu-item">
        <Link href="/blog">Blog</Link>
      </li>
    }
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        <Link href="/writing">Portfolio</Link>
        <Icon aria-hidden="true" name="lucide:chevron-down" size="32" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <Link href="/audio">Audio</Link>
        </li>
        <li class="submenu-item">
          <Link href="/speaking">Speaking Engagement</Link>
        </li>
      </ul>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        <Link href="/writing">Work with me</Link>
        <Icon aria-hidden="true" name="lucide:chevron-down" size="32" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <Link href="/services">Services</Link>
        </li>
        <li class="submenu-item">
          <Link href="/contact">Contact</Link>
        </li>
      </ul>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <DarkMode>
        <Icon aria-hidden="true" name="lucide:moon" slot="light" />
        <Icon aria-hidden="true" name="lucide:sun" slot="dark" />
      </DarkMode>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 30px;
        block-size: 30px;
      }
    }
  }
</style>
